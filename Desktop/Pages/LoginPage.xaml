<UserControl x:Class="Desktop.Pages.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Pages"
             xmlns:vr="clr-namespace:Desktop.Validation"
             xmlns:controls="clr-namespace:Desktop.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">

    <UserControl.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="../Resources/bg1.jpg"/>
    </UserControl.Background>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="1" 
              Background="{StaticResource WindowBackgroundColorBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            
            
            <DockPanel Grid.Row="1" 
                       Margin="20">
                <TextBlock DockPanel.Dock="Top" 
                           HorizontalAlignment="Left" 
                           Style="{StaticResource LargeText}" 
                           Text="Log in to MusicDB"/>
                <TextBlock DockPanel.Dock="Top"
                           HorizontalAlignment="Left" 
                           Style="{StaticResource MediumText}" 
                           Text="Login"/>
                <TextBox DockPanel.Dock="Top"
                         Text="{Binding Mode=TwoWay,Path=Login}"/>
                <TextBlock DockPanel.Dock="Top"
                           HorizontalAlignment="Left" 
                           Style="{StaticResource MediumText}" 
                           Text="Password"/>
                <PasswordBox DockPanel.Dock="Top"
                             Name="Password" 
                             PasswordChar="*"/>
                <Button DockPanel.Dock="Top" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Background="{StaticResource WindowBackgroundColorBrush}" 
                        Click="Button_Click"
                        IsDefault="True">
                    <TextBlock Text="Log in" 
                               Style="{StaticResource MediumText}"
                               Foreground="{StaticResource AccentColorBrush}"/>
                </Button>
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal">
                    <TextBlock Text="Don't have an account?"
                               Style="{StaticResource MediumText}"
                               VerticalAlignment="Center"/>
                    <Button Command="{Binding ApplicationViewModel.RegisterPage, Mode=OneTime}"
                            VerticalAlignment="Center" 
                            Background="{StaticResource WindowBackgroundColorBrush}">
                        <TextBlock Text="Register" 
                                   Style="{StaticResource MediumText}" 
                                   Foreground="{StaticResource AccentColorBrush}"/>
                    </Button>
                </StackPanel>

            </DockPanel>
            
        </Grid>
    </Grid>


